# News Monitor Configuration
# Copy this file to .env and fill in your API keys

# Email Alerts (via Resend)
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxx
FROM_EMAIL=alerts@fedbuyout.com
ALERT_EMAIL=clark@fedbuyout.com

# Twitter/X API
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_access_token
TWITTER_ACCESS_SECRET=your_access_secret

# LinkedIn API
LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token

# Bluesky
BLUESKY_HANDLE=youraccount.bsky.social
BLUESKY_PASSWORD=your_app_password

# Webhook (Slack/Discord)
ALERT_WEBHOOK=https://hooks.slack.com/services/XXX/YYY/ZZZ

# NewsAPI (optional, for additional sources)
NEWSAPI_KEY=your_newsapi_key
